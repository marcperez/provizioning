#!/usr/bin/env ruby

require "fileutils"

folder = "."
folder = ARGV.first if !ARGV.first.nil?

FileUtils.mkdir_p("#{folder}")

`capify #{folder}`

FileUtils.mkdir_p("#{folder}/config/deploy")
FileUtils.mkdir_p("#{folder}/config/server")

FileUtils.cp("#{File.dirname(__FILE__)}/../lib/policies/#{ARGV[1]}.rb", "#{folder}/policy.rb")

puts "[Server configuration created]"
puts "[Modify it to configure you server connection details]"
